<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sadashi.apps.ui.samples">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.MainActivity"
            android:screenOrientation="unspecified">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DrawerLayoutActivity"
            android:label="@string/title_activity_drawer_layout"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ButtonsActivity"
            android:label="@string/title_activity_buttons"
            android:screenOrientation="unspecified" />
        <activity
            android:name=".activities.AnimationIconActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.EffectActivity"
            android:screenOrientation="unspecified" />
        <activity
            android:name=".activities.bottomsheet.BottomSheetActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.InputPasswordActivity"
            android:screenOrientation="unspecified" />
    </application>

</manifest>